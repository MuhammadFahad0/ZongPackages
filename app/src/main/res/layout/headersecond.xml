<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutheadder"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#73ab28"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/headderpic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/header_zong" />

    <TextView
        android:id="@+id/titleheadder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Zong Network Packages"
        android:textColor="#ffff"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/descptionheadder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Zong Network Packages 2020 Pakistan is one of the best network packages apps."
        android:textColor="#ffff"
        android:textSize="7sp"

        />
</LinearLayout>